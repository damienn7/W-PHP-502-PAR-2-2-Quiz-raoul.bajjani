{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

 <div class="hero min-h-screen bg-base-200">
    <div class="flex-col hero-content lg:flex-row-reverse">
        <div class="max-w-lg">
            <h1 class="mb-5 text-5xl font-bold">Register</h1>
            <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
                <div class="card-body flex flex-col items-center">
                    {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'form-control input input-bordered',
                                'autocomplete': 'email',
                                'required': 'required'
                            }
                        }) }}
                        <label for="{{ registrationForm.email.vars.id }}" class="label">
                            <span class="label-text">Email</span>
                        </label>
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'form-control input input-bordered',
                                'autocomplete': 'new-password',
                                'required': 'required'
                            }
                        }) }}
                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="label">
                            <span class="label-text">Password</span>
                        </label>
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {
                                'class': 'form-check-input',
                                'required': 'required'
                            }
                        }) }}
                        <label class="form-check-label">
                            <span class="label-text">I agree to the terms and conditions</span>
                        </label>
                    </div>
                    <div class="mt-6">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

