                    {% for item in items %}

                        {% if item.route == 'app_logout' %}
                            {% if app.user %}
                                <div class="mb-3 popup">
                                    You are logged in as 
                                                                                                                                       
                                                                                                
                                                                                
                                    {{ app.user.userIdentifier }}

                                </div>
                                <li>
                                    <a href="{{ path('app_logout') }}" class="block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500" aria-current="page">
                                        {{ item.title }}
                                    </a>
                                </li>
                            {% endif %}
                        {% else %}
                            <li>
                                <a href="{{ path(item.route) }}" class="block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500" aria-current="page">
