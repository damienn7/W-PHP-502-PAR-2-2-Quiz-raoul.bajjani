    <h1 class="text-5xl font-bold p-20 title">
        User index
    </h1>
    <div class="overflow-x-auto pl-20 pr-20 pb-20 index w-80">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        CreatedAt
                    </th>
                    <th>
                        UpdatedAt
                    </th>
                    <th>
                        IsActive
                    </th>
                    <th>
                        IsAdmin
                    </th>
                    <th>
                        actions
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            {{ user.id }}
                        </td>
                        <td>
                            {{ user.email }}
                        </td>
                        <td>
                            {{ user.password }}
                        </td>
                        <td>
                            {{ user.username }}
                        </td>
                        <td>
                            {{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}
                        </td>
                        <td>
                            {{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}
                        </td>
                        <td>
                            {{ user.isActive ? 'Yes' : 'No' }}
                        </td>
                        <td>
                            {{ user.isAdmin ? 'Yes' : 'No' }}
                        </td>
                        <td>
                            <a class="btn btn-outline btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">
                                show
                            </a>
                            <a class="btn btn-outline btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">
                                edit
                            </a>
                            <a class="btn btn-outline btn-success" href="{{ path('app_user_new') }}">
                                Create new
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">
                            no records found
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
