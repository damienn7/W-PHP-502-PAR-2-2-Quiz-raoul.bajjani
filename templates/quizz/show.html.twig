{% block body %}
    <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    body{
        background-attachment: scroll;
        overflow-y:hidden;
    }

    .categorie{
        top:40%;
        width:100%;
        height:100%;
        position:absolute;
        padding:30px;
        z-index:0;
        backdrop-filter:blur(4px);
        border-radius:20px;
}

.index{
        top:-70px;
        width:100%;
        height:100vh;
        position:absolute;
        /* overflow:scroll; */
}

.container{

        z-index:1000;
        filter:none;
        border-radius:20px;
}

.popup{
  position:absolute;
  top:0;
  z-index:3;
  opacity:0.9;
  right:10px;
}

.nav{
      position:fixed;
      top:0;  
      width:100vw;
  }

  h2{
        font-size:20px;
  }

  .field{
    padding:10px;
    display:flex;
    flex-direction:row;
    justify-content:center;
    margin:10px;
    filter:none;
  }

  .title{
  /* position:absolute;
  top:30%; */
  position:absolute;
  top:10%;
}

  label{
        margin-right:10px;
}

.end{
        position:absolute;
        top:50%;
        left:7%;
        backdrop-filter:blur(4px);
        z-index:2000;
        width:80%;
        height:100%;
        display:flex;
        flex-direction:row;
        justify-content:space-between;
        overflow-x:hidden;
}

.top1{
    position:absolute;
    top:40%;
    left:10%;
}

.top2{
    position:absolute;
    top:40%;
    left:25%;
}

</style>

