            <h1 class="text-5xl font-bold p-20 title">Quizz : {{categorie.name }}<h1>
                {% if question_id > count - 1 %}
                <div class="end">
            <h2 class="text-2xl font-bold p-20">Fin du quizz</div>
        <a class="btn btn-outline btn-danger top1" href="{{ path('app_quizz_index') }}">Back to quizz index</a>
    <a class="btn btn-outline btn-danger top2" href="{{ path('app_quizz_show', {'id': categorie.id,'question_id': question_id - 1,'reponse_id':3}) }}">previous</a>
</div>        
    {% else %}
            <div class="categorie">
            <div class="container index">

                <h2 class="text-2xl font-bold p-20">

                    {{ question.question }}
                </h2>
                {# <a class="btn btn-outline btn-secondary" href="{{ path('app_quizz_show', {'id': categorie.id}) }}">start</a> #}

                <form style="display:flex;flex-direction:column;" action="{{ path('app_quizz_show', {'id': categorie.id,'question_id': question_id + 1,'reponse_id':3}) }}" method="POST">
                {% for reponse in question.reponses %}
                <div class="field">
                    <label class="text-1xl font-bold" for="{{reponse.id }}">{{reponse.reponse}}</label>
                    <input class="form-control" type="radio" value="{{reponse.id}}" id="{{reponse.id}}" name="reponse_id">
                </div>
                {% endfor %}
                <input type="submit" class="btn btn-outline btn-success">
                <a class="btn btn-outline btn-secondary" href="{{ path('app_quizz_show', {'id': categorie.id,'question_id': question_id + 1,'reponse_id':3}) }}">next</a>
                {% if question_id > 0 %}
            <a class="btn btn-outline btn-danger" href="{{ path('app_quizz_show', {'id': categorie.id,'question_id': question_id - 1,'reponse_id':3}) }}">previous</a>
                {% endif %}
            </form>

        {% endif %}
        </div>
        </div>
{% endblock %}
